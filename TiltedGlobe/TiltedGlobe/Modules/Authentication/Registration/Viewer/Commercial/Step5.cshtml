                        <option value="QC">Quebec</option>
                        <option value="SK">Saskatchewan</option>
                        <option value="YT">Yukon Territory</option>
                    </optgroup>
                </select>
            </div>
        </div>
        <div class="fItem">
            <div class="form-group">
                <label>COUNTRY</label>
                <country-select class="form-control" cs-priorities="US, CA, GB" ng-model="user.ccCountry" id="ccCountry" name="ccCountry" required></country-select><br />
                <p ng-show="form.viewerRegistration.ccCountry.$invalid && (form.viewerRegistration.ccCountry.$dirty || form.viewerRegistration.ccCountry.$touched || form.viewerRegistration.$submitted)" class="help-block">Country is required when paying by Credit Card</p>
            </div>
        </div>
        <div class="fItem">
            <div class="form-group">
                <label>ZIP/POSTAL CODE</label>
                <input type="text" class="form-control" ng-model="user.ccZipPostal" id="ccZipPostal" name="ccZipPostal" />
            </div>
        </div>
    </div>
</div>